<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SilpCustomButtonAttrs">
        <!-- Default Android attrs -->
        <attr name="android:enabled" />
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textAllCaps" />

        <attr name="scb_defaultColor" format="color" />
        <attr name="scb_text" format="string" />

        <attr name="scb_textColor" format="color" />
        <attr name="scb_iconColor" format="color" />

        <attr name="scb_textFont" format="string" />
        <attr name="scb_iconFont" format="string" />

        <attr name="scb_textSize" format="dimension" />
        <attr name="scb_iconResource" format="integer" />
        <attr name="scb_fontIconResource" format="string" />
        <attr name="scb_fontIconSize" format="dimension" />
        <attr name="scb_iconPosition" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>

        <attr name="scb_textPosition" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>

        <attr name="scb_textGravity" format="enum">
            <enum name="top" value="0x30" />
            <enum name="bottom" value="0x50" />
            <enum name="left" value="0x03" />
            <enum name="right" value="0x05" />
            <enum name="center_vertical" value="0x10" />
            <enum name="fill_vertical" value="0x70" />
            <enum name="center_horizontal" value="0x01" />
            <enum name="fill_horizontal" value="0x07" />
            <enum name="center" value="0x11" />
            <enum name="fill" value="0x77" />
            <enum name="clip_vertical" value="0x80" />
            <enum name="clip_horizontal" value="0x08" />
            <enum name="start" value="0x00800003" />
            <enum name="end" value="0x00800005" />
        </attr>

        <attr name="scb_iconPaddingLeft" format="dimension" />
        <attr name="scb_iconPaddingRight" format="dimension" />
        <attr name="scb_iconPaddingTop" format="dimension" />
        <attr name="scb_iconPaddingBottom" format="dimension" />

        <attr name="scb_borderColor" format="color" />
        <attr name="scb_borderWidth" format="dimension" />
        <attr name="scb_focusColor" format="color" />
        <attr name="scb_disabledColor" format="color" />
        <attr name="scb_disabledTextColor" format="color" />
        <attr name="scb_disabledBorderColor" format="color" />
        <attr name="scb_radius" format="dimension" />
        <attr name="scb_textAllCaps" format="boolean" />

        <attr name="scb_ghost" format="boolean" />
        <attr name="scb_useSystemFont" format="boolean" />
    </declare-styleable>
</resources>